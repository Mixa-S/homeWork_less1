n = int(input("Сколько учеников в классе?: "))
k = int(input("Сколько яблок в корзине?: "))

appleOfStud = k // n
appleOfBasket = k % n

print("При количестве учеников в классе", n, "им достанется по", appleOfStud, "яблок")
print("При количестве учеников в классе", n, "в корзине останется ", appleOfBasket, "яблок")

# можно объеденить в одну строку
print("При количестве учеников в классе", n, "им достанется по", appleOfStud, "яблок, а в корзине останется", appleOfBasket, "яблок")

